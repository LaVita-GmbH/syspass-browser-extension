{
    "name": "Syspass",
    "description": "This is a Chrome Extension to provide easy and secure access to a Syspass Password Manager.",
    "version": "1.5.1",
    "default_locale": "en",
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": ["functions.js", "background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "index.html"
    },
    "icons": {
        "128": "icon_128.png"
    },
    "permissions": ["<all_urls>", "tabs", "clipboardWrite", "storage"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
